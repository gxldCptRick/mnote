<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="5"
fx:controller="com.gxldcptrick.mnote.controllers.CanvasToolBarController">
    <Label fx:id="lineLabel">Current Line Width: </Label>
    <ColorPicker fx:id="colorPicker"/>
    <ComboBox fx:id="lineWidthComboBox"/>
    <Button fx:id="clearBtn" text="clear"/>
    <ComboBox fx:id="specialEffects"/>
    <CheckBox fx:id="deleting" text="Delete Line"/>
</HBox>
